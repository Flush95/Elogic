<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V2/shop/getShopById/:id" method="GET">
        <service class="Elogic\StoreLocator\Api\ShopRepositoryInterface" method="getShopById"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V2/shop/getShopByUrlKey/:url_key" method="GET">
        <service class="Elogic\StoreLocator\Api\ShopRepositoryInterface" method="getShopByUrlKey"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V2/shop/getAllShops" method="GET">
        <service class="Elogic\StoreLocator\Api\ShopRepositoryInterface" method="getAllShops"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
